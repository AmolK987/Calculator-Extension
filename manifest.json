{
    "name": "Green Calculator",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Just another calculator. But this one is green!!",
    "icons": {
        "128": "/Images/calculator128.png"
    },
    "action": {
        "default_title": "Green Calculator",
        "default_popup": "popup.html"
    },
    
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'",
        "sandbox": "sandbox allow-scripts; script-src 'self' 'https://apis.google.com/'; object-src 'self'"
      }
}